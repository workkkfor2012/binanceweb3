// åŸå§‹çš„é«˜ç²¾åº¦æ ¼å¼åŒ– (ç”¨äºå•å›¾æ¨¡å¼)
const fullPriceFormatter = (price: number): string => {
if (price === 0) return '0';
if (price < 0.000001) {
return price.toFixed(12).replace(/.?0+$/, "");
}
if (price < 1) return price.toFixed(6);
return price.toFixed(2);
};

// âœ¨ æ–°å¢ï¼šç´§å‡‘å‹æ ¼å¼åŒ– (ç”¨äº9å›¾æ¨¡å¼ï¼Œä¿ç•™5ä½æœ‰æ•ˆæ•°å­—)
const compactPriceFormatter = (price: number): string => {
if (price === 0) return '0';
// parseFloat(str).toString() ä¼šå»é™¤æœ«å°¾æ— æ•ˆçš„0ï¼Œä¸”éæå¤§æå°æ—¶ä¸ä¼šä½¿ç”¨ç§‘å­¦è®¡æ•°æ³•
// ä¾‹å¦‚: 123.456 -> 123.46
// 0.00123456 -> 0.0012346
return parseFloat(price.toPrecision(5)).toString();
};

// è¾…åŠ©ï¼šè·å–æ—¶é—´å‘¨æœŸçš„ç§’æ•°
const getIntervalSeconds = (timeframe: string): number => {
const val = parseInt(timeframe);
if (timeframe.endsWith('m')) return val * 60;
if (timeframe.endsWith('h')) return val * 3600;
if (timeframe.endsWith('d')) return val * 86400;
return 60; // default 1m
};

const SingleKlineChart: Component<SingleKlineChartProps> = (props) => {
let chartContainer: HTMLDivElement;
