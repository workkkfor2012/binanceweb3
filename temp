const FORCE_GHOST_CANDLE_COUNT = 1000;

// âœ¨ æ–°å¢ç±»å‹å®šä¹‰ï¼šç²¾åº¦æ¨¡å¼
type PricePrecisionMode = 'compact' | 'full';

interface SingleKlineChartProps {
