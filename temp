            fixLeftEdge: false, 
            fixRightEdge: false, 
        },
        rightPriceScale: { visible: !!props.showAxes, borderColor: '#cccccc', autoScale: true },
        leftPriceScale: { visible: false, autoScale: false }, 
        handleScroll: true, 
        handleScale: true,
    });

    // 1. æ·»åŠ  Ghost Series (éšå½¢éª¨æ¶)
    ghostSeries = chart.addSeries(LineSeries, {
